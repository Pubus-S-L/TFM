# Crea un archivo llamado _redirects en tu carpeta public con este contenido:
/*    /index.html   200

# Método 2: Si usas Nginx como servidor (archivo nginx.conf)
server {
    listen 80;
    
    location / {
        root /usr/share/nginx/html;
        index index.html index.htm;
        try_files $uri $uri/ /index.html;
    }
}

# Método 3: Configuración en staticwebapp.config.json (para Azure Static Web Apps)
{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/images/*.{png,jpg,gif}", "/css/*"]
  }
}

# Método 4: Crear un script en tu package.json para Render
# En tu package.json:
"scripts": {
  "build": "react-scripts build && echo '/* /index.html 200' > build/_redirects"
}